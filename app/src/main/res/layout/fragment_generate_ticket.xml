<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".fragments.GenerateTicketFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:elevation="25dp"
            android:src="@drawable/loader"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Generate New Ticket"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/layout_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_editbox_height">


                    <EditText
                        android:id="@+id/edit_ticketNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_edittext"
                        android:drawableEnd="@drawable/ticket"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="Ticket No"
                        android:imeOptions="actionNext"

                        android:maxLength="8"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/register_textsize"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_editbox_height"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:id="@+id/edit_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_edittext"
                        android:drawableEnd="@drawable/title"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="Tittle"
                        android:imeOptions="actionNext"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/register_textsize"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_editbox_height"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:id="@+id/edit_department"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_edittext"
                        android:drawableEnd="@drawable/arrow_down"
                        android:focusable="false"
                        android:fontFamily="@font/open_sans_light"
                        android:imeOptions="actionNext"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="Select Department "
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/register_textsize"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_editbox_height"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:id="@+id/edit_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_edittext"
                        android:drawableEnd="@drawable/message"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="Message"
                        android:imeOptions="actionNext"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/register_textsize"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/uploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_editbox_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/checkterm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Upload File" />

                    <TextView
                        android:id="@+id/txt_fileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/open_sans_light"
                        android:text="No File Chosen" />

                    <ImageView
                        android:id="@+id/image_attachment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:padding="8dp"
                        android:src="@drawable/attachment" />


                </LinearLayout>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/nextbtn"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>