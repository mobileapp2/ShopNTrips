<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".views.SignUp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:elevation="25dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/loader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginTop="60dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Create Your Account"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Sponsor Information"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                 >


                        <EditText
                            android:background="@drawable/rounded_edittext"
                            android:paddingRight="15dp"
                            android:maxLength="8"
                            android:fontFamily="@font/open_sans_light"
                            android:textStyle="bold"
                            android:id="@+id/edit_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:hint="Name"
                            android:textSize="@dimen/register_textsize"
                            android:imeOptions="actionNext"
                            android:drawableEnd="@drawable/name"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                        >


                        <EditText
                            android:fontFamily="@font/open_sans_light"

                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"
                            android:maxLength="10"
                            android:inputType="number"
                            android:id="@+id/edit_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Mobile Number"
                            android:paddingRight="15dp"
                            android:imeOptions="actionNext"
                            android:drawableEnd="@drawable/mobile"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                 >


                        <EditText
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"

                            android:id="@+id/edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
android:inputType="textEmailAddress"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Email"
                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:paddingRight="15dp"
                            android:drawableEnd="@drawable/mail"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                       >


                        <EditText
                            android:drawableEnd="@drawable/downarrow"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"
                            android:focusable="false"
                            android:id="@+id/edit_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_edittext"
                            android:text="India"
                            android:paddingRight="15dp"


                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                        >


                        <EditText
                            android:drawableEnd="@drawable/downarrow"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"
android:focusable="false"
                            android:id="@+id/edit_state"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_edittext"
                            android:text="Select State"
                            android:paddingRight="15dp"

                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                        >


                        <EditText
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"
android:focusable="false"
                            android:id="@+id/edit_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_edittext"
                            android:text="Select City"
                            android:paddingRight="15dp"
                            android:drawableEnd="@drawable/downarrow"
                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                       >


                        <EditText
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"

                            android:id="@+id/edit_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Address"
                            android:paddingRight="15dp"
                            android:drawableEnd="@drawable/address"
                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height"
                        >


                        <EditText
                            android:background="@drawable/rounded_edittext"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="@dimen/register_textsize"
                            android:textStyle="bold"

                            android:id="@+id/edit_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
android:inputType="number"
                            android:hint="PinCode"
                            android:paddingRight="15dp"
                            android:drawableEnd="@drawable/pincode"
                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorDarkGray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_editbox_height">
                        <CheckBox
                            android:id="@+id/checkterm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border" />

                        <TextView
                            android:fontFamily="@font/open_sans_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:layout_marginLeft="10dp"
                            android:text="I Accept Terms and Conditions"/>
                    </LinearLayout>
                    <Button
                        android:fontFamily="@font/open_sans_light"
                        android:id="@+id/submit"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:text="Submit"
                        android:layout_gravity="center"
                        android:background="@drawable/nextbtn"
                        android:layout_width="180dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/white"
                        android:textSize="@dimen/register_textsize"
                        android:id="@+id/login"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Already have an account? Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>